<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="16dp"
	tools:context=".view.activity.MainActivity">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="30dp"
		android:text="Exemplos de uso com Partials"
		android:textAlignment="center"
		android:textColor="@android:color/black"
		android:textSize="30sp" />

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/shape_button"
		android:foreground="?attr/selectableItemBackground"
		android:onClick="openRegisterAndListing"
		android:text="Cadastro e listagem"
		android:textColor="@android:color/white" />

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:background="@drawable/shape_button"
		android:foreground="?attr/selectableItemBackground"
		android:onClick="openMultipleSteps"
		android:text="MÃºltiplos passos"
		android:textColor="@android:color/white" />

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:background="@drawable/shape_button"
		android:foreground="?attr/selectableItemBackground"
		android:onClick="openViewPager"
		android:text="View pager"
		android:textColor="@android:color/white" />

</LinearLayout>